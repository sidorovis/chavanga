<h1>New image_gallery_group</h1>

<% form_for([:admin, @image_gallery_group]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :parent_group_id %><br />
    <%= f.select :parent_group_id, ImageGalleryGroup.all.collect { |group| [group.title, group.id] } %>
  </p>
  <p>
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </p>  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_image_gallery_groups_path %>