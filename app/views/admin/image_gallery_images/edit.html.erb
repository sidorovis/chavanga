<h1>Editing image_gallery_image</h1>

<% form_for([:admin,@image_gallery_group, @image_gallery_image], :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :tag %><br />
    <%= f.text_field :tag, :size => 60 %>
  </p>
  <p>
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </p>
  <p>
    <%= f.label :image_gallery_group_id %><br />
    <%= f.select :image_gallery_group_id, ImageGalleryGroup.all.collect { |group| [group.title, group.id] } %>
  </p>
    <%=h "Current photo url:" + @image_gallery_image.photo.url %><br/>
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', [:admin,@image_gallery_group] %>