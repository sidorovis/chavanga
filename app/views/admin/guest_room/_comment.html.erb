<div class="comment">
<b><%=h comment.author %></b>
[<%= generate_time(comment.created_at) %>]<br/>
<%= h(comment.answer).split("\n").join("<br/>") %>
</div>
<%= link_to "Delete Comment",
    {   :action => :destroy_comment, 
        :id => comment.id },
        :method => :delete,
        :confirm => 'Are you sure?' %>