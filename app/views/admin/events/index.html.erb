<h1>Listing events</h1>

<table width=650 align=center>
  <tr>
    <th>Event data</th>
    <th>Published</th>
    <th>Controls</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td>
    <b><%=h event.title %></b><br/>
    <%=h event.body %></td>
    <td><%=h event.published %></td>
    <td><%= link_to 'Show', admin_event_path(event) %><br/>
        <%= link_to 'Edit', edit_admin_event_path(event) %><br/>
        <%= link_to 'Destroy', admin_event_path(event), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New event', new_admin_event_path %>