<h1>Editing image_gallery_group</h1>

<% form_for(@image_gallery_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :parent_group_id %><br />
    <%= f.select :parent_group_id, ImageGalleryGroup.all.collect { |group| [group.title, group.id] } %>
  </p>
  <p>
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @image_gallery_group %> |
<%= link_to 'Back', image_gallery_groups_path %>