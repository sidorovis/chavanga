<%= javascript_include_tag "gallery" %>
<div style='display:none;position:fixed;background-color:white' 
    onclick="this.style.display='none';" 
    onmouseover="document.body.style.cursor = 'pointer';",
    onmouseout="document.body.style.cursor = 'default';"
    id='photo_zoomer_handler'>
  <table bgcolor=black><tr><td bgcolor=white><p align=center><b>Click to hide</b></p>
    <div id='photo_zoomer'>
    </div>
  </td></tr></table>
</div>

<%= (@image_gallery_group.id != @image_gallery_group.parent_group_id)?
        (link_to(@image_gallery_group.parent_group.title,@image_gallery_group.parent_group)+"<br/>"):
        ("") %>
<p class='page_title'><%= @image_gallery_group.title %></p>
<% if @image_gallery_group.subgroups.size > 0 %>
    <ul>
    Sub Groups:
    <% @image_gallery_group.subgroups.each do |group| %>
        <li><%= link_to group.title, group %> ( images: <%= group.all_images_size %> )</li>
    <% end %>
    </ul>
<% end %>
<br/>

<table align='center'>
<% @all_images.in_groups_of(PER_COLUMN(),nil) do |row| %>
<tr>
    <% row.each do |image| %>
    <td>
        <% if image %>
            <img src='../images/<%= image.tag %>' width='170' 
                onclick="show_full_image('../images/<%= image.tag %>');" 
                onmouseover="document.body.style.cursor = 'pointer';"
                onmouseout="document.body.style.cursor = 'default';" />
        <% end %>
    </td>
    <% end %>
</tr>
<% end %>

</table>