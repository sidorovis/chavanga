<%= stylesheet_link_tag 'gallery' %>

<%= (@image_gallery_group.id != @image_gallery_group.parent_group_id)?
        (link_to(@image_gallery_group.parent_group.title,@image_gallery_group.parent_group)+"<br/>"):
        ("") %>
<h2 class='gallery_title'><%= @image_gallery_group.title %></h2>
<% if @image_gallery_group.subgroups.size > 0 %>
    <ul>
    Sub Groups:
    <% @image_gallery_group.subgroups.each do |group| %>
        <li><%= link_to group.title, group %> ( images: <%= group.all_images.size %> )</li>
    <% end %>
    </ul>
<% end %>
<br/>
<% link_to 'New Image', new_image_gallery_group_image_gallery_image_path( @image_gallery_group) %>

<table align='center'>
<% if @all_images.size < BORDER() %>
    <% @all_images.each do |image| %>
    <tr><td>
        <%= image_tag image.tag, :width => '600' %>
        <% link_to 'Edit', edit_image_gallery_group_image_gallery_image_path( image.group, image ) %>
    </td></tr>
    <% end %>
<% else %>
    <% @all_images.in_groups_of(PER_COLUMN(),nil) do |row| %>
    <tr>
        <% row.each do |image| %>
        <td>
            <% if image %>
                <%= image_tag image.tag, :width => '170' %>
                <% link_to 'Edit', edit_image_gallery_group_image_gallery_image_path( image.group, image ) %>
            <% end %>
        </td>
        <% end %>
    </tr>
    <% end %>
<% end %>

</table>