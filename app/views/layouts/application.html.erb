    <% @map.to_html unless @map.blank? %>

   <%= raw stylesheet_link_tag "application" %>
   <%= raw javascript_include_tag "application" %>
   <% if controller_name != "image_gallery_groups" %>
        <%= javascript_include_tag "rails" %>
        <%= javascript_include_tag "prototype" %>
        <%= javascript_include_tag "effects" %>
   <% else %>
	<meta http-equiv="imagetoolbar" content="no" />
    <%= raw javascript_include_tag "fancybox/jquery-1.4.3.min.js" %>
    <%= raw javascript_include_tag "fancybox/fancybox/jquery.mousewheel-3.0.4.pack.js" %>
    <%= raw javascript_include_tag "fancybox/fancybox/jquery.fancybox-1.3.4.pack.js" %>
    <%= raw stylesheet_link_tag "fancybox/jquery.fancybox-1.3.4.css" %>
    <%= raw stylesheet_link_tag "fancybox/style.css" %>
	<script type="text/javascript">
		$(document).ready(function() {
            
            
			$("a[rel=example_group]").fancybox({
				'width'				: '75%',
				'height'			: '75%',
				'transitionIn'      : 'elastic',
				'transitionOut'     : 'elastic',
				'titlePosition'		: 'outside',
				'overlayColor'		: '#000',
				'overlayOpacity'	: 0.6,
				'titleFormat'		: function(title, currentArray, currentIndex, currentOpts) {
					return '<span id="fancybox-title-over">Image ' + (currentIndex + 1) + ' / ' + currentArray.length + (title.length ? ' &nbsp; ' + title : '') + '</span>';
				}
			});

		});
	</script>
   
   <% end %>
   <%= csrf_meta_tag %>
    
</head>
