<div class="right_menu_widget" id="right_menu_div">
 <div class="right_menu_widget_element">
  <div class="right_menu_widget_element_title">
    <%= link_to "FLIES", @flies_all %><br/>
  </div>
    <% @selected_ids.each do |k,i| %>
       <div style="margin:2px">
    	<%= link_to image_tag(i.tag, :width=>'145', :height => 125), i.group %><br/>
       </div>
    <% end %>
 </div>
 <div class="right_menu_widget_element">
  <div class="right_menu_widget_element_title">
    <%= link_to "THE BEST!", @the_best_image_gallery %>
  </div>
  <%= link_to image_tag('right_menu/the best/best_main.jpg', :width=>'145'), @the_best_image_gallery %>
 </div> 
</div>
<script>
    new Effect.Appear('right_menu_div', { duration: 3.0,
            afterFinish: function (obj) 
            {
                $('right_menu_div').style.opacity = 1.0;
            }
        });
</script>